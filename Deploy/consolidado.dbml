/* Modificaciones: procesos/plantillas/tareas/documentos/firmas */

Table processes {
  id int [pk, increment]
  name varchar(180) [not null]
  slug varchar(180) [not null, unique]
  parent_id int [ref: > processes.id]
  unit_id int [not null, ref: > units.id]
  has_document boolean [not null, default: true]
  is_active boolean [not null, default: true]
  created_at datetime [not null, default: `CURRENT_TIMESTAMP`]
}

Table process_versions {
  id int [pk, increment]
  process_id int [not null, ref: > processes.id]
  version varchar(10) [not null]
  name varchar(180) [not null]
  slug varchar(180) [not null]
  parent_version_id int [ref: > process_versions.id]
  cargo_id int [not null, ref: > cargos.id]
  has_document boolean [not null, default: true]
  is_active boolean [not null, default: true]
  effective_from date [not null]
  effective_to date
  created_at datetime [not null, default: `CURRENT_TIMESTAMP`]

  Indexes {
    (process_id, version) [unique]
  }
}

Table terms {
  id int [pk, increment]
  name varchar(60) [not null, unique]
  start_date date [not null]
  end_date date [not null]
  is_active boolean [not null, default: true]
}

Table tasks {
  id int [pk, increment]
  process_version_id int [not null, ref: > process_versions.id]
  term_id int [not null, ref: > terms.id]
  parent_task_id int [ref: > tasks.id]
  responsible_position_id int [ref: > unit_positions.id]
  description text
  comments_thread_ref varchar(64) [note: "Mongo thread id para comentarios de la tarea. Permisos/reportes se resuelven en backend al combinar SQL + Mongo."]
  is_main boolean [not null, default: true, note: "Main task created by system per process instance."]
  start_date date [not null]
  end_date date
  status varchar(30) [not null, default: 'pendiente', note: "pendiente|en_proceso|completada|cancelada"]
  created_at datetime [not null, default: `CURRENT_TIMESTAMP`]

  Indexes {
    (process_version_id, term_id) [name: 'idx_tasks_version_term']
  }
}

Table task_assignments {
  id int [pk, increment]
  task_id int [not null, ref: > tasks.id]
  position_id int [not null, ref: > unit_positions.id]
  assigned_person_id int [ref: > persons.id, note: "Snapshot de ocupante al asignar"]
  status varchar(30) [not null, default: 'pendiente', note: "pendiente|en_proceso|completada|cancelada"]
  assigned_at datetime [not null, default: `CURRENT_TIMESTAMP`]
  unassigned_at datetime

  Indexes {
    (task_id, position_id) [unique]
    (assigned_person_id) [name: "idx_task_assignments_person"]
  }
}

Table templates {
  id int [pk, increment]
  process_id int [not null, ref: > processes.id]
  name varchar(180) [not null]
  slug varchar(180) [not null, unique]
  description varchar(255)
  created_at datetime [not null, default: `CURRENT_TIMESTAMP`]

  Indexes {
    (process_id) [name: "idx_templates_process_id"]
  }
}

Table template_versions {
  id int [pk, increment]
  template_id int [not null, ref: > templates.id]
  version varchar(20) [not null]
  mongo_ref varchar(64) [not null, note: "Mongo template version id as string"]
  mongo_version varchar(40) [not null]
  is_active boolean [not null, default: true]
  created_at datetime [not null, default: `CURRENT_TIMESTAMP`]

  Indexes {
    (template_id, version) [unique]
  }
}

Table documents {
  id int [pk, increment]
  task_id int [not null, ref: > tasks.id]
  status varchar(30) [not null, default: 'Inicial', note: "Inicial|En proceso|Aprobado|Rechazado"]
  comments_thread_ref varchar(64) [note: "Mongo thread id para comentarios del documento. Permisos/reportes se resuelven en backend al combinar SQL + Mongo."]
  created_at datetime [not null, default: `CURRENT_TIMESTAMP`]
  updated_at datetime
}

Table document_versions {
  id int [pk, increment]
  document_id int [not null, ref: > documents.id]
  version decimal(4,1) [not null, default: 0.1]
  payload_mongo_id varchar(180) [not null]
  payload_hash varchar(64) [not null]
  latex_path varchar(255)
  pdf_path varchar(255)
  signed_pdf_path varchar(255)
  status varchar(30) [not null, default: 'Borrador', note: "Borrador|Final|Archivado"]
  created_at datetime [not null, default: `CURRENT_TIMESTAMP`]

  Indexes {
    (document_id, version) [unique]
  }
}

Table signature_flow_templates {
  id int [pk, increment]
  process_version_id int [not null, ref: > process_versions.id]
  name varchar(180) [not null]
  description varchar(255)
  is_active boolean [not null, default: true]
  created_at datetime [not null, default: `CURRENT_TIMESTAMP`]
}

Table signature_flow_steps {
  id int [pk, increment]
  template_id int [not null, ref: > signature_flow_templates.id]
  step_order int [not null]
  step_type_id int [not null, ref: > signature_types.id, note: "Catalog: elaboracion|revision|aprobacion"]
  required_cargo_id int [not null, ref: > cargos.id]
  selection_mode varchar(20) [not null, default: "auto_all", note: "auto_all|select|auto_quorum"]
  required_signers_min int [note: "Usado si selection_mode=auto_quorum o para validar seleccion manual"]
  required_signers_max int [note: "Limite superior opcional para seleccion manual"]
  is_required boolean [not null, default: true]
  created_at datetime [not null, default: `CURRENT_TIMESTAMP`]

  Indexes {
    (template_id, step_order) [unique]
  }

  Note: 'Niveles = step_order. auto_all: todos los ocupantes; select: usuario elige y debe cumplir min/max; auto_quorum: sistema elige hasta required_signers_min.'
}

Table signature_flow_instances {
  id int [pk, increment]
  template_id int [not null, ref: > signature_flow_templates.id]
  document_version_id int [not null, ref: > document_versions.id]
  status_id int [not null, ref: > signature_request_statuses.id, note: "Catalog: pendiente|notificado|firmado|rechazado|expirado"]
  created_at datetime [not null, default: `CURRENT_TIMESTAMP`]

  Indexes {
    (document_version_id) [unique]
  }
}

Table signature_requests {
  id int [pk, increment]
  instance_id int [not null, ref: > signature_flow_instances.id]
  step_id int [not null, ref: > signature_flow_steps.id]
  assigned_person_id int [ref: > persons.id]
  status_id int [not null, ref: > signature_request_statuses.id, note: "Catalog: pendiente|notificado|firmado|rechazado|expirado"]
  is_manual boolean [not null, default: false, note: "true = solicitud seleccionada o aÃ±adida manualmente"]
  requested_at datetime [not null, default: `CURRENT_TIMESTAMP`]
  notified_at datetime
  responded_at datetime

  Indexes {
    (instance_id, step_id, assigned_person_id) [unique]
    (instance_id, step_id) [name: "idx_signature_requests_step"]
  }
}

Table document_signatures {
  id int [pk, increment]
  signature_request_id int [ref: > signature_requests.id]
  document_version_id int [not null, ref: > document_versions.id]
  signer_user_id int [not null, ref: > persons.id]
  signature_status_id int [not null, ref: > signature_statuses.id, note: "Catalog: pendiente|firmado|rechazado|anulado"]
  signature_type_id int [not null, ref: > signature_types.id, note: "Catalog: elaboracion|revision|aprobacion"]
  note_short varchar(255)
  signed_file_path varchar(255)
  signed_at datetime
  created_at datetime [not null, default: `CURRENT_TIMESTAMP`]
}

Table signature_types {
  id int [pk, increment]
  code varchar(40) [not null, unique]
  name varchar(80) [not null]
  description varchar(255)
  is_active boolean [not null, default: true]
  created_at datetime [not null, default: `CURRENT_TIMESTAMP`]

  Note: 'Valores sugeridos: elaboracion, revision, aprobacion.'
}

Table signature_statuses {
  id int [pk, increment]
